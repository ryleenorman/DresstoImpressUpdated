@page
@model DresstoImpress.Pages.LookBookModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>

    <div class="header">
        <h1>Seasonal LookBook</h1>
        <p>Some of our current favorites</p>
    </div>

    <div class="row">
        <div class="column">
            <h2>Winter</h2>
            <img src="Winter.jpg" alt="Winter Outfit" />
        </div>

        <hr class="solid">

        <div class="column2">
            <h2>Spring</h2>
            <img src="Spring.jpg" alt="Spring Outfit" />
        </div>

        <hr class="solid">

        <div class="column">
            <h2>Summer</h2>
            <img src="Summer2.jpg" alt="Summer Outfit" />
        </div>

        <hr class="solid">

        <div class="column2">
            <h2>Fall</h2>
            <img src="Fall.jpg" alt="Fall Outfit" />
        </div>
        <hr class="solid">

    </div>

    <div class="container mt-3">
        <h2>Our Inspiration</h2>
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Known For</th>
                    <th>Time Period</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Audrey Hepburn</td>
                    <td>Actress & Humanitarian</td>
                    <td>1929-1993</td>
                </tr>
                <tr>
                    <td>Kate Middleton</td>
                    <td>Princess of Wales</td>
                    <td>1982-Current</td>
                </tr>
                <tr>
                    <td>Grace Kelly</td>
                    <td>Actress & Princess of Monaco</td>
                    <td>1929-1982</td>
                </tr>
            </tbody>
        </table>
    </div>

</body>
</html>